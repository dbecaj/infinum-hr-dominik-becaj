<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/navigationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_1x"
        android:layout_marginLeft="@dimen/spacing_2x"
        android:text="@string/navigation_name_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/spacing_2.5x" />

    <TextView
        android:id="@+id/navigationEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_2x"
        android:layout_marginLeft="@dimen/spacing_2x"
        android:text="@string/navigation_email_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/spacing_2x" />

</LinearLayout>