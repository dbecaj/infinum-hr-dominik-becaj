<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="@dimen/spacing_5x"
        android:layout_height="@dimen/spacing_5x"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/spacing_1x"
        android:elevation="@dimen/spacing_1.5x"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="@dimen/spacing_5x">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_image_black_48dp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_2x"
        android:text="@string/pokemon_name_placeholder"
        android:textSize="@dimen/spacing_2x" />

</LinearLayout>